{
  "manifest_version": 3,
  "name": "Bookmarks Wrapped",
  "version": "1.0.2",
  "description": "Spotify wrapped but for Twitter Bookmarks.",
  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "https://platform.twitter.com/*",
    "https://localhost:5173/*",
    "https://elondontsueme.com/*"
  ],
  "action": {
    "default_title": "Twitter Bookmark Search"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["welcome.html", "welcome.js", "instructions.png", "lib/transformers.min.js"],
      "matches": ["https://x.com/*", "https://twitter.com/*", "https://localhost:5173/*", "https://elondontsueme.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}