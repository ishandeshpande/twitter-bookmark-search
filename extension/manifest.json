{
  "manifest_version": 3,
  "name": "Bookmarks Wrapped",
  "version": "1.0.0",
  "description": "Bookmarks Wrapped allows you to get your Twitter Bookmarks wrapped.",
  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["html2canvas.min.js", "content.js"]
    }
  ]
}